<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/night_background</item>
        <item name="android:textColor">@color/text_color_for_night</item>
        <item name="android:textSize">20sp</item>
        <item name="color_unchecked">@color/checkbox_color_night</item>
        <item name="color_background_window">@color/night_background</item>
        <item name="white_button_color">@color/cancel_button_night</item>
        <item name="switch_track_color_checked">@color/switch_track_activated_color_light</item>
        <item name="switch_thumb_color_unchecked">@color/unchecked_switch_thumb_night</item>
        <item name="switch_track_color_unchecked">@color/switch_track_color_unchecked_night</item>
        <item name="todo_item_date_text_color">@color/todo_item_date_text_color_night</item>
        <item name="nav_bar_background">@color/night_background</item>
        <item name="alertDialogBackground">@color/alert_dialog_background_night</item>
        <item name="settings">@drawable/ic_settings_night</item>
        <item name="unselectedRadioButtonBackground">@drawable/unselected_radio_button_night</item>
        <item name="unselectedRadioButtonTextColor">@android:color/white</item>
        <item name="bottomSheetBackground">@android:color/black</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_night</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/radio_button_text_color</item>
    </style>

    <style name="H1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="H2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_for_night_subhead</item>
    </style>

    <style name="TasksBackground">
        <item name="android:background">@color/tasks_list_background_night</item>
    </style>

    <style name="ImageViewTaskInfo">
        <item name="android:src">@drawable/ic_info_night</item>
    </style>

    <style name="ImageViewArrowDown">
        <item name="android:src">@drawable/ic_arrow_down_night</item>
    </style>

    <style name="EditTextLayoutTaskInput">
        <item name="android:background">@drawable/edit_text_tasks_input_background_night</item>
    </style>

    <style name="EditTextTaskInput">
        <item name="android:background">@drawable/edit_text_tasks_input_background_night</item>
        <item name="android:minLines">4</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Separator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/separator_night</item>
    </style>

    <style name="ButtonWhite" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="colorPrimary">@color/activated</item>
        <item name="colorAccent">?attr/white_button_color</item>
        <item name="colorSurface">?attr/white_button_color</item>
        <item name="android:backgroundTint">?attr/white_button_color</item>
        <item name="android:textColor">?attr/white_button_color</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogDatePickerButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogDatePickerButton</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/tasks_list_background_night</item>
        <item name="android:textColorSecondary">@color/todo_item_date_text_color_night</item>
    </style>

    <style name="DialogDatePickerButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>