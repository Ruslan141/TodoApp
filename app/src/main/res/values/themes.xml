<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:textColor">@color/text_color_for_light</item>
        <item name="android:textSize">20sp</item>
        <item name="color_unchecked">@color/checkbox_color_light</item>
        <item name="color_background_window">@color/light_background</item>
        <item name="white_button_color">@color/cancel_button_light</item>
        <item name="switch_track_color_checked">@color/switch_track_activated_color_light</item>
        <item name="switch_thumb_color_unchecked">@android:color/white</item>
        <item name="switch_track_color_unchecked">@color/switch_track_color_unchecked_light</item>
        <item name="todo_item_date_text_color">@color/todo_item_date_text_color_light</item>
        <item name="nav_bar_background">@color/light_background</item>
    </style>

    <style name="TextViewHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Widget.textViewSubhead" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_for_light_subhead</item>
    </style>

    <style name="Widget.floatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/button_add</item>
    </style>

    <style name="TasksBackground">
        <item name="android:background">@drawable/tasks_rect_background_light</item>
    </style>

    <style name="ImageViewTaskInfo">
        <item name="android:src">@drawable/ic_info_light</item>
    </style>

    <style name="ImageViewArrowDown">
        <item name="android:src">@drawable/ic_arrow_down_light</item>
    </style>

    <style name="EditTextLayoutTaskInput">
        <item name="android:background">@drawable/edit_text_tasks_input_background_light</item>
    </style>

    <style name="EditTextTaskInput">
        <item name="android:background">@drawable/edit_text_tasks_input_background_light</item>
        <item name="android:minLines">4</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Separator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/separator_light</item>
    </style>

    <style name="ButtonWhite" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="colorAccent">?attr/white_button_color</item>
        <item name="colorPrimary">?attr/white_button_color</item>
        <item name="colorSurface">?attr/white_button_color</item>
        <item name="android:backgroundTint">?attr/white_button_color</item>
        <item name="android:textColor">?attr/white_button_color</item>
    </style>
</resources>